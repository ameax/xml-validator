{
    "name": "ameax/xml-validator",
    "description": "A class to validate a xml file with a local xsd schema",
    "keywords": [
        "ameax",
        "xml-validator"
    ],
    "homepage": "https://github.com/ameax/xml-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Schmidt",
            "email": "69188126+ms-aranes@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Ameax\\XmlValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ameax\\XmlValidator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
